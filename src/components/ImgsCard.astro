---
import Image from "astro/components/Image.astro";
interface Props {
    src: string;
    alt: string;
}
const { src, alt } = Astro.props;
const tamaño = 130;
---

<Image
    loading="lazy"
    src={src ??
        "https://img-s-msn-com.akamaized.net/tenant/amp/entityid/BB1msIHC.img"}
    width={tamaño}
    height={tamaño}
    class="object-cover w-full aspect-square rounded-[10px]"
    alt={alt}
/>
<Image
    loading="lazy"
    src={src ??
        "https://img-s-msn-com.akamaized.net/tenant/amp/entityid/BB1msIHC.img"}
    width={tamaño}
    height={tamaño}
    class="absolute opacity-70 transform-gpu blur-lg -z-10 block object-cover w-full aspect-square transition bg-white rounded-[10px]"
    alt={`Card de ${alt}`}
/>
